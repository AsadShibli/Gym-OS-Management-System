@model GrindhouseGym.Models.Trainer

@{
    ViewData["Title"] = "Trainer Details";
}

<div class="container mt-5">
    <div class="row">

        <div class="col-md-4 mb-4">
            <div class="card shadow border-0 h-100">
                <div class="card-body text-center p-5">

                    <div class="mb-3">
                        @if (!string.IsNullOrEmpty(Model.ProfileImage))
                        {
                            <img src="~/images/trainers/@Model.ProfileImage" class="rounded-circle shadow" style="width: 150px; height: 150px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="bg-primary bg-opacity-10 p-4 rounded-circle d-inline-block">
                                <i class="bi bi-person-badge-fill fs-1 text-primary"></i>
                            </div>
                        }
                    </div>
                    <h3 class="fw-bold mb-1">@Model.FullName</h3>
                    <span class="badge bg-primary mb-3">@Model.Specialization Trainer</span>

                    <hr class="opacity-25 my-4">

                    <div class="text-start">
                        <div class="mb-3">
                            <small class="text-uppercase text-muted fw-bold" style="font-size: 0.7rem;">Shift Schedule</small>
                            <p class="fw-bold mb-0"><i class="bi bi-clock me-2 text-warning"></i> @Model.Shift</p>
                        </div>

                        <div class="mb-3">
                            <small class="text-uppercase text-muted fw-bold" style="font-size: 0.7rem;">Contact Phone</small>
                            <p class="fw-bold mb-0"><i class="bi bi-telephone me-2 text-success"></i> @Model.PhoneNumber</p>
                        </div>
                    </div>

                    <div class="mt-4 d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.TrainerId" class="btn btn-outline-primary">Edit Profile</a>
                        <a asp-action="Index" class="btn btn-link text-muted text-decoration-none">Back to List</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow border-0 h-100">

                <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-dark">
                        <i class="bi bi-people-fill me-2 text-primary"></i> Assigned Student Roster
                    </h5>
                    <button onclick="window.print()" class="btn btn-sm btn-outline-secondary d-print-none">
                        <i class="bi bi-printer-fill me-1"></i> Print Roster
                    </button>
                </div>

                <div class="card-body p-0">
                    @if (Model.Members != null && Model.Members.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="ps-4">Member Name</th>
                                        <th>Email</th>
                                        <th>Plan</th>
                                        <th class="text-end pe-4">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in Model.Members)
                                    {
                                        // === LOGIC: Calculate Expiration Status ===
                                        var endDate = student.JoinDate.AddMonths(student.Duration);
                                        var isActive = (endDate - DateTime.Now).Days > 0;
                                        // ==========================================

                                        <tr>
                                            <td class="ps-4 fw-bold">
                                                <a asp-controller="Members" asp-action="Details" asp-route-id="@student.MemberId" class="text-decoration-none text-dark">
                                                    @student.FullName
                                                </a>
                                            </td>
                                            <td class="text-muted small">@student.Email</td>
                                            <td>
                                                <span class="badge bg-secondary">@(student.Plan?.Name ?? "-")</span>
                                            </td>
                                            <td class="text-end pe-4">
                                                @if (isActive)
                                                {
                                                    <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill px-3">Expired</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-clipboard-x text-muted" style="font-size: 2rem;"></i>
                            <p class="text-muted mt-2">No members are currently assigned to this trainer.</p>
                            <a asp-controller="Members" asp-action="Create" class="btn btn-sm btn-primary mt-2">Assign New Member</a>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>