@model GrindhouseGym.Models.Trainer

@{
    ViewData["Title"] = "Edit Trainer";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0 fw-bold">Edit Staff Profile</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="TrainerId" />

                        <div class="text-center mb-4">
                            <div class="mb-3">
                                @if (!string.IsNullOrEmpty(Model.ProfileImage))
                                {
                                    <img src="~/images/trainers/@Model.ProfileImage"
                                         class="rounded-circle shadow-sm"
                                         style="width: 120px; height: 120px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="bg-primary bg-opacity-10 p-4 rounded-circle d-inline-block">
                                        <i class="bi bi-person-badge-fill fs-1 text-primary"></i>
                                    </div>
                                }
                            </div>
                            <label class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-camera-fill me-1"></i> Change Photo
                                <input type="file" name="profileFile" class="d-none" accept="image/*" onchange="this.form.submit()" />
                            </label>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold text-muted small">UPDATE PHOTO (Optional)</label>
                            <input type="file" name="profileFile" class="form-control" accept="image/*" />
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="FullName" class="form-control" placeholder="Name" />
                            <label asp-for="FullName">Full Name</label>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Phone" />
                            <label asp-for="PhoneNumber">Phone Number</label>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Specialization" class="form-control" placeholder="Spec" />
                            <label asp-for="Specialization">Specialization</label>
                            <span asp-validation-for="Specialization" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Shift" class="form-control" placeholder="Shift" />
                            <label asp-for="Shift">Shift Schedule</label>
                            <span asp-validation-for="Shift" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-light border w-50 py-2">Cancel</a>
                            <button type="submit" class="btn btn-primary w-50 py-2 fw-bold">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}