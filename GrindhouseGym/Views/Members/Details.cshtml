@model Member

@{
    ViewData["Title"] = "Member Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-4">

                    @if (!string.IsNullOrEmpty(Model.ProfileImage))
                    {
                        <img src="~/images/profiles/@Model.ProfileImage"
                             class="rounded-circle border border-3 border-white shadow-sm mb-2"
                             style="width: 120px; height: 120px; object-fit: cover;"
                             alt="@Model.FullName" />
                    }
                    else
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor" class="bi bi-person-circle mb-2" viewBox="0 0 16 16">
                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                        </svg>
                    }

                    <h3 class="mb-0 fw-bold mt-2">@Model.FullName</h3>
                    <small class="text-white-50">Member Profile</small>
                </div>

                <div class="card-body p-4">
                    <div class="row mb-3">
                        <label class="col-sm-4 text-muted fw-bold">Email Address</label>
                        <div class="col-sm-8 text-dark">
                            @Html.DisplayFor(model => model.Email)
                        </div>
                    </div>

                    <hr class="text-muted opacity-25">

                    <div class="row mb-3">
                        <label class="col-sm-4 text-muted fw-bold">Join Date</label>
                        <div class="col-sm-8 text-dark">
                            @Model.JoinDate.ToString("MMMM dd, yyyy")
                        </div>
                    </div>

                    <hr class="text-muted opacity-25">

                    <div class="row align-items-center">
                        <label class="col-sm-4 text-muted fw-bold">Current Plan</label>
                        <div class="col-sm-8">
                            <span class="badge bg-success fs-6 px-3 py-2 rounded-pill">
                                @Html.DisplayFor(model => model.Plan.Name)
                            </span>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-light p-3 text-center">
                    <a asp-action="Edit" asp-route-id="@Model?.MemberId" class="btn btn-primary px-4 me-2">
                        <i class="bi bi-pencil-fill me-1"></i> Edit Profile
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        Back to List
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>