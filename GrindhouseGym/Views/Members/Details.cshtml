@model GrindhouseGym.Models.Member

@{
    ViewData["Title"] = "Member Profile";

    // === BUSINESS LOGIC CALCULATION ===
    var endDate = Model.JoinDate.AddMonths(Model.Duration);
    var remainingDays = (endDate - DateTime.Now).Days;
    bool isActive = remainingDays > 0;
    string statusColor = isActive ? "success" : "danger";
    string statusText = isActive ? "Active Membership" : "Expired";
    // ==================================
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-lg border-0 mb-4">
                <div class="card-body p-5">
                    <div class="d-flex align-items-center mb-4">
                        <div class="me-4">
                            @if (!string.IsNullOrEmpty(Model.ProfileImage))
                            {
                                <img src="~/images/profiles/@Model.ProfileImage" class="rounded-circle shadow" style="width: 100px; height: 100px; object-fit: cover;" />
                            }
                            else
                            {
                                <div class="bg-light rounded-circle d-flex align-items-center justify-content-center shadow-sm" style="width: 100px; height: 100px;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="#adb5bd" class="bi bi-person-fill" viewBox="0 0 16 16"><path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" /></svg>
                                </div>
                            }
                        </div>

                        <div>
                            <h2 class="fw-bold mb-1">@Model.FullName</h2>
                            <span class="badge bg-primary rounded-pill px-3">@Model.Plan.Name Plan</span>
                            <span class="text-muted ms-2 small">@Model.Email</span>
                        </div>
                    </div>

                    <div class="card bg-@statusColor bg-opacity-10 border-@statusColor border-opacity-25 p-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-@statusColor fw-bold text-uppercase mb-1">
                                    <i class="bi bi-patch-check-fill me-1"></i> @statusText
                                </h6>
                                <p class="mb-0 text-dark small">
                                    Expires on <strong>@endDate.ToString("MMMM dd, yyyy")</strong>
                                </p>
                            </div>
                            <div class="text-end">
                                <h2 class="fw-bold mb-0 text-@statusColor">@Math.Max(0, remainingDays)</h2>
                                <small class="text-muted text-uppercase fw-bold" style="font-size: 0.65rem;">Days Left</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-light p-3 text-center">
                    <a asp-action="Edit" asp-route-id="@Model.MemberId" class="btn btn-outline-primary px-4 me-2">Edit Details</a>
                    <a asp-action="Index" class="btn btn-link text-muted text-decoration-none">Back to Directory</a>
                </div>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <div class="p-3 border rounded bg-white h-100">
                        <small class="text-uppercase text-muted fw-bold">Start Date</small>
                        <p class="fw-bold mb-0">@Model.JoinDate.ToString("MMM dd, yyyy")</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="p-3 border rounded bg-white h-100">
                        <small class="text-uppercase text-muted fw-bold">Duration</small>
                        <p class="fw-bold mb-0">@Model.Duration Months</p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>